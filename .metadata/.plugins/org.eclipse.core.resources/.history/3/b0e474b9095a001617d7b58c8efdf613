package com.POM.framework;

import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.FindBy;

public class StockAcc_Suppliers extends constant
 {
	
	String SupplierName="Rajesh";
	String Address="Shivaji Park";
	String City="Nashik";
	String Country="India";
	String yCPerson="Salman";
	String PNum="46485";
	String Email="A@gmail.com";
	String MNumber="13132323";
	String Note="Welcome";
	
	@FindBy(xpath="//span[contains(@class,'glyphicon glyphicon-plus')][contains(@data-caption,'Add')]")
	WebElement add;
	
	@FindBy(id="x_Supplier_Name")
	WebElement Sname;
	
	@FindBy(id="x_Address")
	WebElement Add;
	
	@FindBy(id="x_City")
	WebElement city;
	
	@FindBy(id="x_Country")
	WebElement country;
	
	@FindBy(id="x_Contact_Person")
	WebElement Cperson;
	
	@FindBy(id="x_Phone_Number")
	WebElement Pnumber;
	
	@FindBy(id="x__Email")
	WebElement email;
	
	@FindBy(id="x_Mobile_Number")
	WebElement Mnumber;
	
	@FindBy(id="x_Notes")
	WebElement note;
	
	@FindBy(id="btnAction")
	WebElement Addbtn;
	
	@FindBy(xpath="//div/button[contains(@class,'ajs-button btn btn-primary')][contains(text(),'OK!')]")
	WebElement Okbtn;
	
	@FindBy(xpath="html/body/div[17]/div[2]/div/div[4]/div[2]/button")
	WebElement confirmbtn;
	
	public void ClickAdd(){
		add.click();
	}
	
	public void SuppliersCreation(){
		Sname.sendKeys(SupplierName);
		Add.sendKeys(Address);
		city.sendKeys(City);
		country.sendKeys(Country);
		Cperson.sendKeys(yCPerson);
		Pnumber.sendKeys(PNum);
		email.sendKeys(Email);
		Mnumber.sendKeys(MNumber);
		note.sendKeys(Note);
		Addbtn.click();
		Okbtn.click();
		confirmbtn.click();
		
	}

}
//String xname,String xAddress,String xcity,String xcountry,String xCperson,String xpNum,String xemail,String xmNum,String xnote
